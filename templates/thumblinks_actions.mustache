{{!
    @template block_thumblinks_action/thumblinks_actions

    This template renders the main content area for the mcms block.

    Example context (json):
    {}
}}

<div id="block-thumblinks-action-{{uniqid}}" class="block-thumblinks-action block-cards">
    <div class="container">
        <div class="row">
            {{#thumbnails}}
                <a class="thumbnail col mx-2 my-1 d-flex flex-column justify-content-center p-0"  {{#image}} style="background-image: url({{.}});" {{/image}} href="{{utl}}">
                        <div class="title w-100 p-1 p-l-2 mt-5">{{ title }}</div>
                </a>
            {{/thumbnails}}
        </div>
    </div>
    <div class="container text-center mt-5">
        <a class="btn btn-primary" href="{{ctatitle}}">
            {{ctatitle }}
        </a>
    </div>
</div>